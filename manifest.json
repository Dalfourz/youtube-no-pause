{
    "manifest_version": 3,
    "name": "YouTube Auto Continue",
    "version": "1.0",
    "description": "Automatically clicks 'Continue watching' on YouTube and YouTube Music.",
    "permissions": ["scripting"],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://music.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*",
          "https://music.youtube.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }  